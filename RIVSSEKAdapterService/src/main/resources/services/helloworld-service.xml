<?xml version="1.0" encoding="utf-8"?>
<mule
        xmlns="http://www.mulesoft.org/schema/mule/core"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.mulesoft.org/schema/mule/https http://www.mulesoft.org/schema/mule/https/current/mule-https.xsd
            http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
        	http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

    <flow name="helloworld-flow">
    	<composite-source>
    
	        <inbound-endpoint address="${IN_ENDPOINT_HELLO}" connector-ref="soitoolkit-http-connector"
	                          exchange-pattern="request-response"
	                          transformer-refs="objToStr logReqIn"
	                          responseTransformer-refs="objToStr logRespOut" />
	
	        <inbound-endpoint address="${IN_ENDPOINT_HELLO}" connector-ref="soitoolkit-http-connector"
	                          exchange-pattern="request-response"
	                          transformer-refs="objToStr logReqIn"
	                          responseTransformer-refs="objToStr logRespOut" />

         </composite-source>
        
        <outbound-endpoint address="${OUT_ENDPOINT_HELLO}" connector-ref="soitoolkit-http-connector"
                          exchange-pattern="request-response"
                          transformer-refs="objToStr logReqOut"
                          responseTransformer-refs="objToStr logRespIn" />
        
    </flow>
</mule>
